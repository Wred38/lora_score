<%= link_to "<- home", root_path %>

<h1>
  <%= @game.game_name %>
</h1>

<table> <%# SCORES %>
  <tr>
    <th><%= Player.find(@game.p1).player_name %></th>
    <th><%= Player.find(@game.p2).player_name %></th>
    <th><%= Player.find(@game.p3).player_name %></th>
    <th><%= Player.find(@game.p4).player_name %></th>
  </tr>
  <% for i in 1..28 do %>
    <% @score = Score.where(game_id: @game.id, score_position: i).first %>
    <tr>
      <% for j in 1..4 do %>
        <% @scr = @score.value_p1 if j = 1%>
        <% @scr = @score.value_p2 if j = 2%>
        <% @scr = @score.value_p3 if j = 3%>
        <% @scr = @score.value_p4 if j = 4%>
        <td>
          <input type="number" min=-224 max=224 value=<%= @scr %>>
        </td>
      <% end %>
    </tr>
  <% end %>
  <tr>
    <td>total: <%= @scores.sum(:value_p1) %></td>
    <td>total: <%= @scores.sum(:value_p2) %></td>
    <td>total: <%= @scores.sum(:value_p3) %></td>
    <td>total: <%= @scores.sum(:value_p4) %></td>
  </tr>
</table>

<br>

<table> <%# GAMES %>
  <tr>
    <th>Game</th>
    <th>Name 1</th>
    <th>Name 2</th>
    <th>Name 3</th>
    <th>Name 4</th>
  </tr>
  <% games = ["min", "max", "src", "dam", "krl", "lor", "pro"] %>
  <% games.each do |game| %>
    <tr>
      <td><%= game %></td>
      <% 4.times do %>
        <td><button></button></td>
      <% end %>
    </tr>
  <% end %>
</table>

<br>

<button>SAVE</button>

<ul>
  <li><%= link_to "Edit", edit_game_path(@game) %></li>
</ul>
